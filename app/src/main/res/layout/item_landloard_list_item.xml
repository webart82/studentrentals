<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:padding="@dimen/dp_4">

    <ImageView
        android:id="@+id/landloard_profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="4dp"
        android:src="@drawable/photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <LinearLayout
        android:id="@+id/landloard_profile_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="@dimen/dp_4"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/landloard_profile_image"
        app:layout_constraintTop_toTopOf="@id/landloard_profile_image">

        <TextView
            android:id="@+id/landloard_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Kenneth Tyson"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/landloard_profile_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:maxLines="2"
            android:text="@string/lorem"

            android:textAppearance="@style/TextAppearance.AppCompat.Small">

        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/star_outline"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_4"
        android:text="3.5K"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@id/landloard_profile_list">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>



