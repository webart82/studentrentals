<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="roomd"
            type="com.student.models.RoomData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryLightColor"
        android:padding="@dimen/dp_15"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/icon_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@android:drawable/ic_menu_edit">

        </ImageButton>

        <TableLayout
            android:id="@+id/txtable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/icon_edit"
            app:layout_constraintBottom_toTopOf="@id/btn_cancel"
            app:layout_constraintStart_toStartOf="parent"
            >

            <TableRow android:padding="@dimen/dp_4" android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="@string/room_name"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@{roomd.name,default=@string/ipsum}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small">

                </TextView>
            </TableRow>

            <TableRow android:padding="@dimen/dp_4" android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/room_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@{roomd.title,default=@string/ipsum}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small">

                </TextView>


            </TableRow>

            <TableRow android:padding="@dimen/dp_4" android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="@string/room_total"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@{roomd.total,default=@string/ipsum}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small">

                </TextView>


            </TableRow>

            <TableRow android:padding="@dimen/dp_4" android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="@string/room_size"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txt_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{roomd.size,default=@string/ipsum}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small">

                </TextView>

            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/room_desc"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="bold">

            </TextView>

            <TableRow
                android:padding="@dimen/dp_4"
                android:weightSum="2">


                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@{roomd.description,default=@string/lorem}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small">

                </TextView>
            </TableRow>

        </TableLayout>
        <TableLayout
            android:id="@+id/txtedt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/icon_edit"
            app:layout_constraintBottom_toTopOf="@id/btn_cancel"
            app:layout_constraintStart_toStartOf="parent"
            >

            <TableRow
                android:padding="@dimen/dp_4"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="@string/room_name"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold">

                </TextView>


                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:text="@{roomd.name,default=@string/ipsum}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    >

                </EditText>
            </TableRow>

            <TableRow
                android:padding="@dimen/dp_4"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="@string/room_title"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold">

                </TextView>


                <EditText
                    android:id="@+id/edt_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:text="@{roomd.title,default=@string/ipsum}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    >

                </EditText>
            </TableRow>

            <TableRow android:padding="@dimen/dp_4" android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/room_total"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold">

                </TextView>



                <EditText
                    android:id="@+id/edt_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:text="@{roomd.total,default=@string/ipsum}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    >

                </EditText>
            </TableRow>

            <TableRow android:padding="@dimen/dp_4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="@string/room_size"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textStyle="bold">

                </TextView>



                <EditText
                    android:id="@+id/edt_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:text="@{roomd.size,default=@string/ipsum}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small">

                </EditText>
            </TableRow>

            <TableRow>

                <EditText
                    android:id="@+id/edt_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{roomd.description,default=@string/lorem}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    >

                </EditText>
            </TableRow>
        </TableLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_gravity="start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.MaterialComponents.Button.TextButton">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:layout_gravity="end"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton">

        </com.google.android.material.button.MaterialButton>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>