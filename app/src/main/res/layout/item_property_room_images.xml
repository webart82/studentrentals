<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/activity_margin">


    <ImageView
        android:id="@+id/property_room_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/photo">

    </ImageView>

    <TextView
        android:id="@+id/property_room_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="500sqm"
        app:layout_constraintBottom_toBottomOf="@id/property_room_image"
        app:layout_constraintEnd_toEndOf="@id/property_room_image"
        android:padding="@dimen/dp_12"
        android:textColor="@android:color/white"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:id="@+id/property_room_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:padding="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/white"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/property_room_image"
        android:weightSum="4"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_12"
            android:drawableTop="@drawable/phone">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_12"
            android:drawableTop="@drawable/account_tie">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_12"

            android:drawableTop="@drawable/star">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_12"
            android:drawableTop="@drawable/information_outline">

        </TextView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>